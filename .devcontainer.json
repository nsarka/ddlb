{
  "image": "ddlb:snordmann",
  "workspaceMount": "source=/.autodirect/mtrsysgwork/snordmann/ddlb,target=/opt/pytorch/ddlb,type=bind",
  "workspaceFolder": "/opt/pytorch/ddlb",
  "remoteEnv": { 
    "DEBUG": "1",
    "NVDMatmulBench_DISTRIBUTED" : "1"
  },
  "remoteUser":"snordmann",
  "containerUser":"snordmann",
  "runArgs": [
    "--gpus", "all",
    "--runtime", "nvidia"
  ],
  "customizations": {
    "vscode": {
      "extensions": ["eamodio.gitlens","github.copilot","github.copilot-chat","github.vscode-pull-request-github","ms-azuretools.vscode-docker","ms-python.debugpy","ms-python.python","ms-python.vscode-pylance","ms-vscode.cmake-tools","ms-vscode.cpptools","ms-vscode.cpptools-extension-pack","ms-vscode.cpptools-themes","twxs.cmake"]
    }
  }
}